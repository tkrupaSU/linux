				MX8MM_IOMUXC_SAI1_RXD2_SAI1_RX_DATA2		(PAD_CTL_PE_DOWN | PAD_CTL_HYS | PAD_CTL_FAST)
				MX8MM_IOMUXC_SAI1_RXD3_SAI1_RX_DATA3		(PAD_CTL_PE_DOWN | PAD_CTL_HYS | PAD_CTL_FAST)
